<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>receipt</servlet-name>
        <servlet-class>receipt.view</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.controller.ContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefundServlet</servlet-name>
        <servlet-class>com.controller.RefundServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMerchStockServlet</servlet-name>
        <servlet-class>com.controller.AddMerchStockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>receipt</servlet-name>
        <url-pattern>/receipt.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/ContactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefundServlet</servlet-name>
        <url-pattern>/RefundServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMerchStockServlet</servlet-name>
        <url-pattern>/AddMerchStockServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homepage.html</welcome-file>
    </welcome-file-list>
</web-app>
